<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" android:weightSum="8">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp" android:layout_weight="1"
        android:text="Valve Control" android:textSize="30sp" android:gravity="center"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp" android:layout_weight="1"
        android:padding="10sp"
        android:gravity="center"
        android:textColor="#000000"
        android:text="/!\\ This screen overrides your defined programs! /!\\\nOnce you close it, you will lose control over the valves!"/>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="0dp" android:layout_weight="7"
        android:id="@+id/tlValveTable">
    </TableLayout>

</LinearLayout>